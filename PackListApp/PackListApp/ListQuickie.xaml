<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PackListApp.ListQuickie">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="MyListView">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" Padding="5">
                                <Image></Image>
                                <Label></Label>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Text="Select" HorizontalOptions="FillAndExpand" Style="{StaticResource ButtonTheme}"
                    BorderRadius="0"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>